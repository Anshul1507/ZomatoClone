<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/restaurant_cell_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/restaurant_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/restaurant_rating"
            android:padding="10dp"
            android:text="4.4"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/restaurant_image_cardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="8dp"
            app:cardMaxElevation="4dp">

            <ImageView
                android:id="@+id/restaurant_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/background_image" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/restaurant_image_cardView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Anantam Restaurants"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurant_food_type"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Chinese,North Indian"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurant_food_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$20 per person | 38 mins"
                android:textColor="@color/closingTime"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurant_food_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30% OFF - use code MAXSAFETY"
                android:textColor="@color/offersColor"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/corona_guidelines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:text="WHO Sanitization Protocol * Staff wears mask * Staff Temperature Checks"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>